{%
  set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  'paragraph--id--' ~ paragraph.id(),
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
]
%}
{% block paragraph %}
  {% include '@d324theme/jumbotron/jumbotron.twig' with {
    background_image: background,
    background_color: paragraph.field_background_color.value.0,
    background_color_2: paragraph.field_background_color_2.value.0,
    hero_text: content.field_hero_text,
    calls_to_action: paragraph.field_calls_to_actions
  } %}
{% endblock paragraph %}
{{ attach_library('blazy/load') }}
