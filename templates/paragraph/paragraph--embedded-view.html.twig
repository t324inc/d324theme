{%
  set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  'paragraph--id--' ~ paragraph.id(),
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
]
%}
{% block paragraph %}
  {% include '@d324theme/embedded_view/embedded_view.twig' with {
    heading: paragraph.field_heading.value,
    sub_heading: paragraph.field_sub_heading.value,
    pre_heading: paragraph.field_pre_heading.value,
    view: content.field_embedded_view
  } %}
{% endblock paragraph %}
