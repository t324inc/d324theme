{% extends "paragraph--card.html.twig" %}
{% set attributes = attributes.addClass('card').addClass(classes) %}
{% block card_body %}
  {% if content.field_formatted_heading %}
    <h5 class="card-title">{{ content.field_formatted_heading}}</h5>
  {% endif %}
  {% if content.field_text_content %}
    <div class="card-text">
      {{ content.field_text_content }}
    </div>
  {% endif %}
{% endblock %}
{% block card_footer %}
  {% if content.field_main_link|render|trim is not empty %}
    <div class="calls-to-action">
      {% include '@d324theme/button/link_button.twig' with {
        links: paragraph.field_main_link,
        type: 'primary',
      } %}
    </div>
  {% endif %}
{% endblock %}
